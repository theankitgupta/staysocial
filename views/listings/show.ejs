<% layout('./layouts/boilerplate') %>

<section class="listing-show">
  <div class="container">
    <header class="listing-header">
      <h1 class="listing-title">
        <%= listing.title %>
      </h1>
      <p class="listing-price">
        ₹<%= listing.price.toLocaleString() %>
      </p>
    </header>

    <div class="listing-body">
      <p class="listing-description">
        <%= listing.description %>
      </p>
    </div>

    <footer class="listing-footer d-flex gap-2">
      <a href="/listings" class="btn btn-secondary">
        ← Back to Listings
      </a>

      <!-- EDIT BUTTON -->
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">
        Edit
      </a>

      <!-- DELETE FORM -->
      <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this listing?');">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </footer>
  </div>
</section>
