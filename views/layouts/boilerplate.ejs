    integrity="sha384-ENjdO4Dr2bkBIFxQpeo3lX0HcWdOj9Bv1Zlqz1f0XggUjU5sAN5j1y9Ed+Mgm2kN"
    crossorigin="anonymous"
  >

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <!-- Header / Navbar placeholder -->
