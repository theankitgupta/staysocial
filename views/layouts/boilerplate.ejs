    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/">StaySocial</a>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="container my-4">
